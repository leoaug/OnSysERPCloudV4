<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports http://jasperreports.sourceforge.net/xsd/jasperreport.xsd" name="VendasRepresTotResumo" language="groovy" pageWidth="595" pageHeight="842" columnWidth="555" leftMargin="20" rightMargin="20" topMargin="20" bottomMargin="20">
	<property name="ireport.zoom" value="1.0"/>
	<property name="ireport.x" value="0"/>
	<property name="ireport.y" value="0"/>
	<parameter name="idEmpresa" class="java.lang.Integer"/>
	<parameter name="dtIni" class="java.lang.String"/>
	<parameter name="dtFim" class="java.lang.String"/>
	<queryString>
		<![CDATA[SELECT
     CASE pedidovendas.`SITUACAO`
                WHEN 'Faturado' THEN 'Realizado'
                ELSE 'Carteira' END TipoSit,
     SUM(itempedidovendas.`QUANTIDADE`) AS Caixa,
     SUM(itempedidovendas.`VLTOTITEM`) AS VlTab,
     SUM(itempedidovendas.`VLTOTLIQITEM`) AS VlMercad
FROM
     `regiao` regiao INNER JOIN `representante` representante ON regiao.`id` = representante.`REGIAO_id`
     INNER JOIN `participante` participante ON representante.`id` = participante.`REPRESENTANTE_id`
     INNER JOIN `pedidovendas` pedidovendas ON participante.`id` = pedidovendas.`CLIENTE_id`
     INNER JOIN `itempedidovendas` itempedidovendas ON pedidovendas.`id` = itempedidovendas.`PEDIDOVENDAS_id`
WHERE (representante.`EMPRESA_ID` = $P{idEmpresa}) AND (pedidovendas.`DATAEMISSAO` BETWEEN $P{dtIni} AND $P{dtFim})
GROUP BY TipoSit
]]>
	</queryString>
	<field name="TipoSit" class="java.lang.String"/>
	<field name="Caixa" class="java.math.BigDecimal"/>
	<field name="VlTab" class="java.math.BigDecimal"/>
	<field name="VlMercad" class="java.math.BigDecimal"/>
	<variable name="vlDesc" class="java.math.BigDecimal">
		<variableExpression><![CDATA[$F{VlTab}.subtract($F{VlMercad})]]></variableExpression>
	</variable>
	<variable name="totCaixa" class="java.math.BigDecimal" calculation="Sum">
		<variableExpression><![CDATA[$F{Caixa}]]></variableExpression>
	</variable>
	<variable name="totVlTab" class="java.math.BigDecimal" calculation="Sum">
		<variableExpression><![CDATA[$F{VlTab}]]></variableExpression>
	</variable>
	<variable name="totDesc" class="java.math.BigDecimal" calculation="Sum">
		<variableExpression><![CDATA[$V{vlDesc}]]></variableExpression>
	</variable>
	<variable name="totVlMerc" class="java.math.BigDecimal" calculation="Sum">
		<variableExpression><![CDATA[$F{VlMercad}]]></variableExpression>
	</variable>
