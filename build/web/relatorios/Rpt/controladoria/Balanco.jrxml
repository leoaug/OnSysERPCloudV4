	<queryString>
		<![CDATA[ SELECT SUBSTRING(a.`CONTA`,1,1) as Grupo1, b.`DESCRICAO` as TitGR1,
        SUBSTRING(a.`CONTA`,1,3) as Grupo2, c.`DESCRICAO` as TitGR2,
        SUBSTRING(a.`CONTA`,1,5) as Grupo3, d.`DESCRICAO` as TitGR3,
        SUBSTRING(a.`CONTA`,1,7) as Grupo4, e.`DESCRICAO` as TitGR4,
        a.`CONTA`, a.`DESCRICAO`,
        s.`VLCREDITO` AS Credito,
        s.`VLDEBITO`  AS Debito,
        s.`VLDEBITO` - s.`VLCREDITO` AS Saldo,
	s.`PERIODO`   AS Periodo
from   saldocontabil s, planocontas a, planocontas b,
       planocontas c  , planocontas d, planocontas e
where  a.id = s.`CONTA_id`
 and   SUBSTRING(a.`CONTA`,1,1) = b.`CONTA`
 and   SUBSTRING(a.`CONTA`,1,3) = c.`CONTA`
 and   SUBSTRING(a.`CONTA`,1,5) = d.`CONTA`
 and   SUBSTRING(a.`CONTA`,1,7) = e.`CONTA`
 and   b.`EMPRESA_id` = 1  and   a.`TIPO` = 'Analitica'
 and   s.`EMPRESA_id` = 1  and   c.`EMPRESA_id` = 1
 and   d.`EMPRESA_id` = 1  and   e.`EMPRESA_id` = 1
order by a.`CONTA` ]]>
